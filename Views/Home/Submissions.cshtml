@{
    ViewBag.Title = "Submit a Movie";   //sets the web title
}

@model HiltonFilmCollection.Models.Submissions

@*@Html.DropDownListFor(m => m.rating,new SelectList(Enum.GetValues(typeof(rating))), "Select Rating")*@

@*Form to submit a movie*@
<h1>Submit a movie here:</h1>
<form method="post">    
    <div>
        <label asp-for="category">Category</label>
        <input asp-for="category" required/>
    </div>
    <div>
        <label asp-for="title">Title</label>
        <input asp-for="title" required/>
    </div>
    <div>
        <label asp-for="year">Year</label>
        <input asp-for="year" required/>
    </div>
    <div>
        <label asp-for="director">Director</label>
        <input asp-for="director" required/>
    </div>
    <div>
        <label asp-for="rating">Rating</label>
        <select asp-for="rating" aspclass="form-group" id="rating" name="rating">
            <option value="">Select Rating</option> @*Gives a dropdown of options*@
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <div>
        <label asp-for="edited">Edited</label>
        <select asp-for="edited">
            <option value="">Select One</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
        </select>
    </div>
    <div>
        <label asp-for="lentto">Lent To</label>
        <input asp-for="lentto" />
    </div>
    <div>
        <label asp-for="notes">Notes</label>
        <input MaxLength="25" asp-for="notes" />
    </div>

    <button type="submit">Submit</button>
</form>